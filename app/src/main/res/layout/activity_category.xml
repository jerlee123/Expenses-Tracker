<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="20dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:paddingRight="23dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="94dp"
                        android:background="@android:drawable/ic_menu_close_clear_cancel"
                        android:orientation="vertical"></LinearLayout>

                    <TextView
                        android:id="@+id/category_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="59dp"
                        android:text="Categories"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/category_add_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="7dp"
                        android:text="+"
                        android:textColor="#000000"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/category_new_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="New"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="3dp">

                    <TextView
                        android:id="@+id/category_salary_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textColor="#6563FF"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salary"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="5dp">

                    <ImageView
                        android:id="@+id/category_groceries_icon"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/shopping_bag" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Groceries"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:background="#727070"
                    android:orientation="vertical"
                    android:paddingHorizontal="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/gas" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gas"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="23dp"
                    android:background="#F35288"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp">

                    <ImageView
                        android:id="@+id/rn9ldv6lqin"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/home" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rent"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/fitness_center" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gym"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="23dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/restaurant" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Restaurant"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="21dp"
                    android:background="#F35288"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/travel" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Travel"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/umbrella" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vacation"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/investment" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gift"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/savings" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Savings"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="9dp"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="13dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:background="#5E8001"
                    android:orientation="vertical"
                    android:paddingHorizontal="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_marginTop="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/percent" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Investments"
                    android:textColor="#292B2D"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>